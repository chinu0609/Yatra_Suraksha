        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_margin="24dp"-->
        <!--            android:textColor="@color/background_blue1"-->
        <!--            android:textSize="30sp"-->
        <!--            android:textStyle="bold"-->
        <!--            tools:text="0.90%" />-->

    </LinearLayout>

</ScrollView>